<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/item9"
        android:layout_width="110dp"
        android:tag="8"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:onClick="dropIn"
        app:layout_constraintStart_toEndOf="@+id/item8"
        app:layout_constraintTop_toBottomOf="@+id/item6"
        android:alpha="0" />

    <ImageView
        android:id="@+id/item8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:tag="7"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:onClick="dropIn"
        android:alpha="0"
        app:layout_constraintEnd_toStartOf="@id/item6"
        app:layout_constraintTop_toBottomOf="@id/item5Main" />

    <ImageView
        android:id="@+id/item7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="28dp"
        android:tag="6"
        android:layout_marginEnd="24dp"
        android:onClick="dropIn"
        android:alpha="0"
        app:layout_constraintEnd_toStartOf="@id/item8"
        app:layout_constraintTop_toBottomOf="@id/item4" />

    <ImageView
        android:id="@+id/item6"
        android:layout_width="110dp"
        android:onClick="dropIn"
        android:tag="5"
        android:alpha="0"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@id/item5Main"
        app:layout_constraintTop_toBottomOf="@id/item3" />

    <ImageView
        android:id="@+id/item4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="24dp"
        android:tag="3"
        android:onClick="dropIn"
        android:alpha="0"
        app:layout_constraintEnd_toStartOf="@id/item5Main"
        app:layout_constraintTop_toTopOf="@id/item5Main" />

    <ImageView
        android:id="@+id/item3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="24dp"
        android:tag="2"
        android:onClick="dropIn"
        android:alpha="0"
        app:layout_constraintStart_toEndOf="@id/item5Main"
        app:layout_constraintTop_toTopOf="@id/item2" />

    <ImageView
        android:id="@+id/item2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:tag="1"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@id/item5Main"
        android:onClick="dropIn"
        android:alpha="0"
        app:layout_constraintEnd_toStartOf="@id/item3" />

    <ImageView
        android:id="@+id/gradle"
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/board" />

    <ImageView
        android:id="@+id/item5Main"
        android:layout_width="110dp"
        android:tag="4"
        android:layout_height="110dp"
        android:onClick="dropIn"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gradle"
        app:layout_constraintStart_toStartOf="@id/gradle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:tag="0"
        android:layout_marginEnd="24dp"
        android:onClick="dropIn"
        android:alpha="0"
        app:layout_constraintEnd_toStartOf="@id/item2"
        app:layout_constraintTop_toTopOf="@id/item2" />

</androidx.constraintlayout.widget.ConstraintLayout>